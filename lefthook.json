{
  "pre-commit": {
    "parallel": true,
    "commands": {
      "lint": {
        "glob": "**/*.{js,jsx,mjs,ts,tsx}",
        "run": "eslint --fix \"{staged_files}\"",
        "stage_fixed": true
      },
      "pretty": {
        "run": "prettier --ignore-unknown --write \"{staged_files}\"",
        "stage_fixed": true
      }
    }
  }
}
